{
  "_comment": "Build with `packer build ubuntu.json`",
  "builders": [
    {
      "type": "vmware-vmx",
      "headless": "{{ user `headless` }}",
      "http_directory": "http",
      "output_directory": "./_virtuals/sift-update.vmwarevm",
      "shutdown_command": "echo '{{ user `ssh_password` }}'|sudo -S shutdown -P now",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_wait_timeout": "10000s",
      "ssh_pty": false,
      "tools_upload_flavor": "linux",
      "source_path": "./_virtuals/sift.vmwarevm/sift-workstation.vmx",
      "vm_name": "sift-workstation",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      }
    }
  ],
  "provisioners": [
    {
      "environment_vars": [
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "SIFT_VERSION={{user `sift_version`}}",
        "DISTRO={{user `distro`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/clean-saltstack.sh",
        "scripts/fix-pyopenssl.sh"
      ],
      "type": "shell"
    },
    {
      "type": "salt-masterless",
      "local_state_tree": "/Users/ekristen/Development/sift/sift-saltstack",
      "skip_bootstrap": true,
      "custom_state": "sift.vm",
      "salt_call_args": "--state-output=terse"
    },
    {
      "environment_vars": [
        "CLEANUP_PAUSE={{user `cleanup_pause`}}",
        "DESKTOP={{user `desktop`}}",
        "UPDATE={{user `update`}}",
        "SSH_USERNAME={{user `ssh_username`}}",
        "SSH_PASSWORD={{user `ssh_password`}}",
        "http_proxy={{user `http_proxy`}}",
        "https_proxy={{user `https_proxy`}}",
        "ftp_proxy={{user `ftp_proxy`}}",
        "rsync_proxy={{user `rsync_proxy`}}",
        "no_proxy={{user `no_proxy`}}",
        "SIFT_VERSION={{user `sift_version`}}",
        "DISTRO={{user `distro`}}"
      ],
      "execute_command": "echo '{{ user `ssh_password` }}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "scripts": [
        "scripts/clean-saltstack.sh",
        "scripts/minimize.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "headless": "false",
    "sift_version": "stable",
    "ssh_username": "sansforensics",
    "ssh_password": "forensics",
    "hostname": "siftworkstation",
    "distro": "focal",
    "cpus": "2",
    "memory": "2048",
    "cleanup_pause": "",
    "locale": "en_US",
    "ftp_proxy": "{{env `ftp_proxy`}}",
    "http_proxy": "{{env `http_proxy`}}",
    "https_proxy": "{{env `https_proxy`}}",
    "no_proxy": "{{env `no_proxy`}}",
    "rsync_proxy": "{{env `rsync_proxy`}}",
    "version": "0.1.0",
    "virtualbox_guest_os_type": "Ubuntu_64",
    "vmware_guest_os_type": "ubuntu-64"
  }
}